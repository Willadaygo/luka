<div class="Content">

  {% set order = entry.order %}
  {% set sections = craft.entries.section('sections') %} 

  {% for section in sections %}

    <section class="Content__item" id="{{ order[loop.index0].title|kebab }}">

      <h2 class="Content__title">{{ order[loop.index0].title }}</h2>

      {% set blocks = order[loop.index0].blocks %}
      {% for block in blocks %}

        {% switch block.type %}

        {% case 'copy' %}
          {{ block.text }}

        {% case 'lists' %}
          <div class="grid  grid--rigid">
            <div class="grid__item  u-1/2@sm">

              <h4 class="Content__listTitle  t-h2">{{ block.columnOneTitle }}</h4>
              {% set listOne = block.columnOne %}
              {% if listOne is defined and listOne|length %}
                <ul class="Content__list  t-h2">
                  {% for item in listOne %}
                    <li>{{ item }}</li>
                  {% endfor %}
                </ul>
              {% endif %}

            </div>

            <div class="grid__item  u-1/2@sm">

              <h4 class="Content__listTitle  t-h2">{{ block.columnTwoTitle }}</h4>
              {% set listTwo = block.columnTwo %}
              {% if listTwo is defined and listTwo|length %}
                <ul class="Content__list  t-h2">
                  {% for item in listTwo %}
                    <li>{{ item }}</li>
                  {% endfor %}
                </ul>
              {% endif %}

            </div>
          </div>

        {% case 'quotes' %}
          <blockquote>
            {{ block.quote }} 
          </blockquote>

        {% endswitch %}

      {% endfor %}
   
    </section>

  {% endfor %} 

